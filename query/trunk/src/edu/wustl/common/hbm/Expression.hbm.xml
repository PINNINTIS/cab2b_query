<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
	package="edu.wustl.common.querysuite.queryobject.impl">
	<subclass name="Expression" extends="BaseExpression"
		discriminator-value="expr">
		<join table="QUERY_EXPRESSION">
			<key column="IDENTIFIER" />
			<!-- the sql-type has to be specified for mysql 5.0
				see http://www.databasesandlife.com/hibernate-boolean-fields-mysql-50
			-->
			<property name="isInView" type="boolean">
				<column name="IS_IN_VIEW" sql-type="BOOLEAN" />
			</property>
			<property name="isVisible" type="boolean">
				<column name="IS_VISIBLE" sql-type="BOOLEAN" />
			</property>
			<property name="expressionId" type="integer" column="UI_EXPR_ID" />
			<many-to-one name="queryEntity" class="QueryEntity"
				cascade="save-update,delete" column="QUERY_ENTITY_ID" />
		</join>
	</subclass>
</hibernate-mapping>
