<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="edu.wustl.common.querysuite.queryobject.impl.BaseExpression"
		abstract="true" table="QUERY_BASE_EXPRESSION">
		<cache usage="read-write" />

		<id name="id" column="IDENTIFIER" type="long" length="30"
			unsaved-value="null">
			<generator class="native">
				<param name="sequence">BASE_EXPRESSION_SEQ</param>
			</generator>
		</id>

		<discriminator column="EXPR_TYPE" type="string" />

		<list name="expressionOperands" lazy="false" inverse="false"
			cascade="all-delete-orphan" table="QUERY_BASE_EXPR_OPND">
			<cache usage="read-write" />

			<key column="QUERY_BASE_EXPRESSION_ID" />

			<index column="POSITION" />

			<many-to-many column="OPERAND_ID" unique="true"
				class="edu.wustl.common.querysuite.queryobject.IOperand" />
		</list>

		<list name="logicalConnectors" lazy="false" inverse="false"
			cascade="all-delete-orphan">
			<cache usage="read-write" />

			<key column="QUERY_BASE_EXPRESSION_ID" />

			<index column="POSITION" />

			<one-to-many
				class="edu.wustl.common.querysuite.queryobject.impl.Connector" />
		</list>

		<!--
			To add non XDoclet property mappings, create a file named
			hibernate-properties-Expression.xml
			containing the additional properties and place it in your merge dir.
		-->

	</class>

</hibernate-mapping>
