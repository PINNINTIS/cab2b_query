<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false"  default-lazy="false">
    <class
        name="edu.wustl.common.querysuite.queryobject.impl.ExpressionOperand"
        table="QUERY_EXPRESSION_OPERAND"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">EXPRESSION_OPERAND_SEQ</param>
            </generator>
        </id>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExpressionOperand.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.common.querysuite.queryobject.impl.Rule"
            table="QUERY_RULE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <list
            name="conditions"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
        >
            <cache 
                usage="read-write" 
             />

              <key
                  column="QUERY_RULE_ID"
              />

              <index
                  column="POSITION"
                  type="integer"
              />

              <one-to-many
                  class="edu.wustl.common.querysuite.queryobject.impl.Condition"
              />
        </list>

        <many-to-one
            name="containingExpression"
            class="edu.wustl.common.querysuite.queryobject.impl.Expression"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="QUERY_EXPRESSION_ID"
            not-null="true"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.wustl.common.querysuite.queryobject.impl.ExpressionId"
            table="QUERY_EXPRESSIONID"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <property
            name="expressionIdentifier"
            type="integer"
            update="true"
            insert="true"
            column="SUB_EXPRESSION_ID"
            length="30"
            not-null="true"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
