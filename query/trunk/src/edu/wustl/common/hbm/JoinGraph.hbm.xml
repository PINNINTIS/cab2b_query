<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.querysuite.queryobject.impl.JoinGraph"
        table="QUERY_JOIN_GRAPH"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">JOIN_GRAPH_SEQ</param>
            </generator>
        </id>

        <set
            name="graphEntryCollection"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
            <cache 
                usage="read-write" 
             />

              <key
                  column="QUERY_JOIN_GRAPH_ID"
              />

              <one-to-many
                  class="edu.wustl.common.querysuite.queryobject.impl.GraphEntry"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JoinGraph.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
